{% extends 'partials/_master.twig' %}

{% block main %}

<section class="section pb-32 pt-16">
    <div class="container mx-auto flex max-w-5xl">
        <div class="lg:w-2/3">
            {{record.content}}
        </div>
        <div class="w-1/3 hidden lg:block">
            {% include 'partials/_social_links.twig' %}
            {% set relatedrecords = record|related %}        
            {% if relatedrecords is not empty %}
                {% include 'partials/_aside_pined_articles.twig' with {entries: relatedrecords} %}
            {% else %}
                {% include 'partials/_aside_pined_articles.twig' %}
            {% endif %}
            {% include 'partials/_aside_taxonomylinks.twig' %}
        </div>
    </div>
</section>

{% endblock main %}
