{% macro display_submenu(item) %}
<template x-if="open">
    <div class="relative lg:flex" x-data="{ open: open }">
        <a href="{{ item.uri }}" class="flex flex-row items-center w-full px-2 xl:px-4 py-2 lg:py-3 mt-2 text-md text-left lg:w-auto lg:inline lg:mt-0 hover:bg-pink-600 focus:bg-pink-600 focus:outline-none focus:shadow-outline rounded-md">
            <span>{{ item.label|default(item.title) }}</span>
            <svg fill="currentColor" viewBox="0 0 20 20" :class="{'rotate-180': open, 'rotate-0': !open}" class="inline w-4 h-4 mt-1 ml-1 transition-transform duration-200 transform lg:-mt-1">
                <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd"></path>
            </svg>
        </a>
        <div 
             x-show="open" x-transition:enter="transition ease-out duration-100"
             x-transition:enter-start="transform opacity-0 scale-95"
             x-transition:enter-end="transform opacity-100 scale-100" x-transition:leave="transition ease-in duration-75"
             x-transition:leave-start="transform opacity-100 scale-100"
             x-transition:leave-end="transform opacity-0 scale-95"
             class="lg:absolute w-full lg:w-60">
            <div class="px-2 py-2">
                {% for item in item.submenu %}
                <a class="block px-4 py-2 mt-2 text-md lg:mt-0 bg-white text-gray-600 hover:bg-gray-100 hover:text-red focus:text-white focus:bg-pink focus:outline-none focus:shadow-outline rounded-md"
                   href="{{ item.uri }}">{{ item.label|default(item.title) }}</a>
                {% endfor %}
            </div>
        </div>
    </div>
</template>

 {# Desktop version #}
<template x-if="!open">
    <div class="relative lg:flex" x-data="{ open: false }"  x-on:mouseenter="open = true" x-on:mouseleave="open = false">
        <a href="{{ item.uri }}" class="flex flex-row items-center w-full px-2 xl:px-4 py-2 lg:py-4 mt-2 text-md text-left lg:w-auto lg:inline lg:mt-0 hover:bg-pink-600 focus:bg-pink-600 focus:outline-none focus:shadow-outline">
            <span>{{ item.label|default(item.title) }}</span>
            <svg fill="currentColor" viewBox="0 0 20 20" :class="{'rotate-180': open, 'rotate-0': !open}" class="inline w-4 h-4 mt-1 ml-1 transition-transform duration-200 transform lg:-mt-1">
                <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd"></path>
            </svg>
        </a>
        <div 
             x-show="open" x-transition:enter="transition ease-out duration-100"
             x-transition:enter-start="transform opacity-0 scale-95"
             x-transition:enter-end="transform opacity-100 scale-100" x-transition:leave="transition ease-in duration-75"
             x-transition:leave-start="transform opacity-100 scale-100"
             x-transition:leave-end="transform opacity-0 scale-95"
             class="lg:absolute right-0 w-full lg:w-60 transform translate-y-10">
            <div class="px-2 py-4">
                {% for item in item.submenu %}
                <a class="block px-4 py-2 mt-2 text-md lg:mt-0 bg-white text-gray-600 hover:bg-gray-100 focus:text-white focus:bg-pink focus:outline-none focus:shadow-outline"
                   href="{{ item.uri }}">{{ item.label|default(item.title) }}</a>
                {% endfor %}
            </div>
        </div>
    </div>
</template>

{% endmacro %}

{% macro display_main(item) %}

    <a        
        href="{{ item.uri }}"
    {% if item|current %}
       class="px-2 xl:px-4 py-2 lg:py-4 mt-4 text-md xl:text-1xl bg-pink-600 lg:mt-0 focus:outline-none focus:shadow-outline rounded-md lg:rounded-none"
    {% else %}
        class="px-2 xl:px-4 py-2 lg:py-4 mt-4 text-md xl:text-1xl lg:mt-0 hover:bg-pink-600 focus:bg-pink-600 focus:outline-none focus:shadow-outline rounded-md lg:rounded-none"
    {% endif %}
    >
        {{ item.label|default(item.title) }}
    </a>
{% endmacro %}

<nav :class="{'flex': open, 'hidden': !open}"
     class="z-30 top-0 pb-2 lg:pb-0 currentColor flex-col flex-grow hidden lg:flex lg:justify-end lg:flex-row">
    {% for item in menu %}

        {% if not item.submenu %}
            {{ _self.display_main(item) }}
        {% else %}
            {{ _self.display_submenu(item) }}
        {% endif %}

    {% endfor %}
</nav>