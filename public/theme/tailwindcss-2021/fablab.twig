{% extends 'partials/_master.twig' %}

{% block main %}
<section class="section pb-32 pt-16">
    <div class="container mx-auto flex flex-wrap max-w-5xl">
        <div class="lg:w-2/3">
            {{record.section_introduction}}
        </div>
        <div class="mx-auto mt-6 p-6 lg:mt-0 lg:p-0 lg:w-1/3">
            {% include 'partials/_social_links.twig' %}
            {% include 'partials/_aside_pined_articles.twig' %}
            {% include 'partials/_aside_facebook_page.twig' %}
        </div>
        
    </div>
</section>

{{record.content}}

<section class="section gradient-info">
    {% include 'partials/_machine_features_divider_bottom.twig' %}

    <div class="w-full my-16">
        <h1 class="text-4xl md:text-5xl text-center text-white font-serif font-bold">Les Makers</h1>
    </div>
    {% setcontent peoples = 'people' where {groups: 'Makers'}%}
    {% include 'partials/_carousel_people.twig' with {'peoples': peoples} %}

    {% include 'partials/_pages_divider_bottom.twig' %}
</section>

<section class="section section-latest-entries min-h-screen">
    {% include 'partials/_tabs_machines.twig' %}
</section>

{% endblock main %}